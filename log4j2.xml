<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} [%t/%level]: %msg%n" />
        </Console>
        <File name="File" fileName="logs/latest.log" append="false">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss} [%t/%level]: %msg%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>

    <Loggers>
        <!-- Lower all debug spam to info or warn -->
        <Logger name="net.minecraft" level="info"/>
        <Logger name="com.mojang" level="info"/>
        <Logger name="io.netty" level="warn"/>
        <Logger name="org.lwjgl" level="warn"/>
        <Logger name="Config" level="warn"/>
        <Logger name="FML" level="info"/>

        <Root level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Root>
    </Loggers>
</Configuration>
